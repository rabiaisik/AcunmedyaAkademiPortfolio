@model  List <AcunmedyaAkademiPortfolio.Models.TblHakkimda>

<section id="about" class="about section">

    @foreach(var hakkimda in Model) {

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>@hakkimda.hakkimdabaslik</h2>
        <p>@hakkimda.hakkimdaaçiklama</p>
    </div><!-- End Section Title -->

<div class="container" data-aos="fade-up" data-aos-delay="100">

    <div class="row gy-4 justify-content-center">
        <div class="col-lg-4">
            <img src="/MyResume-1.0.0/assets/img/profile-img.jpg" class="img-fluid" alt="">
        </div>
        <div class="col-lg-8 content">
            <h2>.Net Devoloper &amp; Web Geliştirici.</h2>
            <p class="fst-italic py-3">
                Bana ait kişisel bilgilere aşağıdaki ekrandan erişim sağlayabilirsiniz.
            </p>
            <div class="row">
                <div class="col-lg-6">
                    <ul>
                        <li><i class="bi bi-chevron-right"></i> <strong>Doğum Tarihi:</strong> <span>@hakkimda.dogumtarihi</span></li>
                        <li><i class="bi bi-chevron-right"></i> <strong>Website:</strong> <span>@hakkimda.website</span></li>
                        <li><i class="bi bi-chevron-right"></i> <strong>Telefon:</strong> <span>@hakkimda.telefon</span></li>
                        <li><i class="bi bi-chevron-right"></i> <strong>Şehir:</strong> <span>@hakkimda.sehir</span></li>
                    </ul>
                </div>
                <div class="col-lg-6">
                    <ul>
                        <li><i class="bi bi-chevron-right"></i> <strong>Yaş:</strong> <span>@hakkimda.yas</span></li>
                        <li><i class="bi bi-chevron-right"></i> <strong>Eğitim:</strong> <span>@hakkimda.egitim</span></li>
                        <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@hakkimda.email</span></li>
                        <li><i class="bi bi-chevron-right"></i> <strong>Freelance:</strong> <span>@hakkimda.freelance</span></li>
                    </ul>
                </div>
            </div>
            <p class="py-3">
                @hakkimda.kisaaciklama
            </p>
        </div>
    </div>
</div>
    }
</section><!-- /About Section -->
