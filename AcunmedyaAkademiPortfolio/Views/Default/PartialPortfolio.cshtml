@model List<AcunmedyaAkademiPortfolio.Models.Table_category>

<!-- Portfolio Section -->
<section id="portfolio" class="portfolio section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Kategoriler/Portfolyo</h2>
        <p>Portfolyo Bilgileri Aşağıdadır</p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">

            <ul class="portfolio-filters isotope-filters" data-aos="fade-up" data-aos-delay="100">
                @foreach (var category in Model)
                {
                    <li data-filter="*">@category.CategoryName</li>
                }
            </ul><!-- End Portfolio Filters -->

            <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-@item.CategoryName">
                        <img src="@item.ImageUrl" class="img-fluid" alt="">
                        <div class="portfolio-info">
                            <h4>@item.Title</h4>
                            <p>@item.ShortDescription</p>
                            <a href="@item.ImageUrl" title="@item.Categoryıd" data-gallery="portfolio-gallery-app" class="glightbox preview-link"><i class="bi bi-zoom-in"></i></a>
                            <a href="portfolio-details.html" title="More Details" class="details-link"><i class="bi bi-link-45deg"></i></a>
                        </div>
                    </div><!-- End Portfolio Item -->
                }
            </div>
            <!-- End Portfolio Container
                        </div>

                </div>

            </section><!-- /Portfolio Section -->
